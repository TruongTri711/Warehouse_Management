extends ../../layouts/common 

block content 
    div(style="margin-left: 13%")
        .shadow.p-3.mb-5.bg-white.rounded.mt-3.ml-4.mr-4
            h4.font-weight-bold Thay đổi mật khẩu
            hr  
            form(method="POST" autocomplete="off") 
                .form-group 
                    label(for="passcu") Nhập mật khẩu cũ
                    input#passcu.form-control(type="password" name="passcu" placeholder="Mật khẩu cũ..." style="width: 30%" required value=passcu? passcu : "")
                    if errpass
                        each db in errpass
                            small.form-text(style="color: red")= db
                .form-group 
                    label(for="passmoi") Nhập mật khẩu mới
                    input#passmoi.form-control(type="password" name="passmoi" placeholder="Mật khẩu mới..." style="width: 30%" required value=passmoi? passmoi : "")

                button.btn.btn-primary(type="submit") Cập nhật