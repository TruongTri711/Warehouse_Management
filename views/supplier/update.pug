        block content
            div(style="margin-left: 13%")
                .shadow.p-3.mb-5.bg-white.rounded.mt-3.ml-4.mr-4
                    h4.font-weight-bold Cập nhật thông tin nhà cung cấp
                    hr  
                    each db in supplier
                        form(method="POST" action=("/supplier/update/" + db._id + "?_method=PUT") autocomplete="off")
                            .form-group 
                                label.ml-2(for="name") Tên nhà cung cấp:
                                input#name.form-control(type="text" name="name" style="width: 30%" placeholder="Tên nhà cung cấp..." required value=db.name)
                                
                            .form-group 
                                label.ml-2(for="address") Địa chỉ: 
                                input#address.form-control(type="text" name="address" style="width: 30%" placeholder="Địa chỉ..." required value=db.address)

                            .form-group 
                                label.ml-2(for="phone") Số điện thoại: 
                                input#phone.form-control(type="text" name="phone" style="width: 30%" placeholder="Số điện thoại..." required value=db.phone)              
                                small#checkphone.ml-2(style="color: red")

                            .form-group 
                                label.ml-2(for="email") Email: 
                                input#email.form-control(type="text" name="email" style="width: 30%" placeholder="Email..." value=db.email)                

                            .form-group 
                                label.ml-2(for="date") Ngày hợp tác: 
                                input#date.form-control(type="text" name="cooperationDay" style="width: 30%" placeholder="Ngày hợp tác..." value=db.cooperationDay)  

                            button.btn.btn-primary(type="submit" onclick="checkSubmit()") Cập nhật          


            script. 
                var phone = document.getElementById('phone');
                var btnsubmit = document.getElementById('btnsubmit');

                function checkSubmit()
                {
                    if(Number.isInteger(phone) == false)
                    {
                        document.getElementById('checkphone').innerHTML = "Vui lòng chỉ nhập số!";
                    }              
                }